<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_backg" >

   <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/mine_layoutclickchange"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@drawable/mine_layoutclickchange"
             android:clickable="true" 
            >

         
            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
                android:text="头像" />
            
            <ImageView 
                android:id="@+id/user_picture"
                 android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/small_user"
                 />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >
           
            <TextView
                 style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
                android:text="账号" />
            
             <TextView
                 android:id="@+id/personal_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
                android:text="默认为手机号"
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >
           
            <TextView
                 style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
                android:text="昵称" />
            
             <TextView
                 android:id="@+id/personal_nicheng_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
                android:text="飞飞鱼"
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>
        
         <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >
           
            <TextView
                 style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
                android:text="地址" />
            
             <TextView
                 android:id="@+id/personal_address_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
                android:text="湖南长沙"
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>
        
         <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >
           
            <TextView
                 style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
                android:text="派送区域" />
            
             <TextView
                 android:id="@+id/personal_sendoutarea_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
                android:text="天马学生公寓 "
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>
        
           <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >
           
            <TextView
                 style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
                android:text="快递公司" />
            
             <TextView
                 android:id="@+id/personal_sendcompany_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
                android:text="中通 "
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>