<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/greenbackg"
        android:layout_weight="9.5" >

        <ImageView
            android:id="@+id/tv_title"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_margin="7dp"
            android:gravity="center|center_vertical"
            android:src="@drawable/fishtext"
             />

        

        <ImageButton
            android:id="@+id/lookuPmessBT"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_title"
            android:layout_marginRight="10dp"
            android:background="@drawable/lookupmess" />
        
        
        <View
            android:layout_width="7dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/lookuPmessBT"
            android:background="@drawable/divideline_vertical" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/divideline" />

</LinearLayout>