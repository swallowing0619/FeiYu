<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_backg"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/mine_layoutclickchange"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/user_picture_layout"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="头像" />

             <ImageView 
                android:id="@+id/user_picture"
                 android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/small_user"
                 />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:id="@+id/registered_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="账号" />

            <TextView
                android:id="@+id/account_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="默认为手机号"
                android:textColor="@color/gray2"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="昵称" />

            <EditText
                android:id="@+id/name_Edit"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/editview_login"
                android:ems="15"
                android:hint="请输入昵称"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="地址" />
             <EditText
                android:id="@+id/address_edit"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/editview_login"
                android:ems="15"
                android:hint="具体地址是"
                android:singleLine="true"
                android:textSize="15sp" />

            
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:id="@+id/sendoutarea_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="派送区域" />

            <EditText
                android:id="@+id/sendoutarea_Edit"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/editview_login"
                android:ems="15"
                android:hint="如：天马学生公寓"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/mine_backg" />

        <RelativeLayout
            android:id="@+id/sendcompany_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_layoutclickchange"
            android:clickable="true" >

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="快递公司" />
            
            
            <EditText
                android:id="@+id/sendcompany_edit"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/editview_login"
                android:ems="15"
                android:hint="如：圆通快递"
                android:singleLine="true"
                android:textSize="15sp" />

            
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>