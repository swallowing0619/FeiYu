<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_backg"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/queryNumEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/background_login_div"
            android:hint="请输入查询号码"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="20dp" />
        
          <Button
            android:id="@+id/query"
            android:layout_width="@dimen/button_weight"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_vertical"
             android:layout_marginRight="8dp"
            android:background="@drawable/buttonshape2"
            android:text="查询"
            android:textColor="#000000"
            android:textSize="@dimen/button_txt_size" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/backgroundcolor"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="2"
            android:background="#FFFFFF" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/enterlistimg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="5"
            android:background="#FFFFFF" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/phoneimg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="4"
            android:background="#FFFFFF" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/phoneimg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="2"
            android:background="#FFFFFF" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/enterlistimg" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/sendchecklistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>