<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_backg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/user_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/mine_layoutclickchange"
                android:clickable="true" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/small_user"
                    android:padding="5dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageButton1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mine_usernameTV"
                        style="@style/setting_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="15200871717" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/setting_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息剩余条数:  " />

                        <TextView
                            android:id="@+id/mine_remainmessTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="@color/red1"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/userinfo_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/mine_layoutclickchange"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dimen_userinfo_image"
                    android:layout_height="@dimen/dimen_userinfo_image"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/small_userinfo" />

                <ImageView
                    android:layout_width="@dimen/dimen_userinfo_arrow"
                    android:layout_height="@dimen/dimen_userinfo_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/setting_arrow" />

                <TextView
                    android:id="@+id/mine_userinfoTV"
                    style="@style/setting_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="个人信息" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/mine_layoutclickchange"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/mine_backg" />

                <RelativeLayout
                    android:id="@+id/pay_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_layoutclickchange"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/dimen_userinfo_image"
                        android:layout_height="@dimen/dimen_userinfo_image"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/small_paymoney" />

                    <ImageView
                        android:layout_width="@dimen/dimen_userinfo_arrow"
                        android:layout_height="@dimen/dimen_userinfo_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/setting_arrow" />

                    <TextView
                        style="@style/setting_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView3"
                        android:text="充值" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/mine_backg" />

                <RelativeLayout
                    android:id="@+id/reward_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_layoutclickchange"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/dimen_userinfo_image"
                        android:layout_height="@dimen/dimen_userinfo_image"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/small_forgood" />

                    <ImageView
                        android:layout_width="@dimen/dimen_userinfo_arrow"
                        android:layout_height="@dimen/dimen_userinfo_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/setting_arrow" />

                    <TextView
                        style="@style/setting_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView4"
                        android:text="奖励" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/changepwd_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_layoutclickchange"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/dimen_userinfo_image"
                    android:layout_height="@dimen/dimen_userinfo_image"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/small_editmima" />

                <ImageView
                    android:layout_width="@dimen/dimen_userinfo_arrow"
                    android:layout_height="@dimen/dimen_userinfo_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/setting_arrow" />

                <TextView
                    style="@style/setting_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="修改密码" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:background="@color/mine_backg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/mine_layoutclickchange"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/mine_backg" />

                <RelativeLayout
                    android:id="@+id/exchange_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_layoutclickchange"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/dimen_userinfo_image"
                        android:layout_height="@dimen/dimen_userinfo_image"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/small_aboutfish" />

                    <ImageView
                        android:layout_width="@dimen/dimen_userinfo_arrow"
                        android:layout_height="@dimen/dimen_userinfo_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/setting_arrow" />

                    <TextView
                        style="@style/setting_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView6"
                        android:text="关于飞鱼" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/mine_backg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dip"
                android:background="@null"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/mine_backg" />

                <Button
                    android:id="@+id/exitButton"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/use_lib_buttonshap"
                    android:text="退出登录"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>